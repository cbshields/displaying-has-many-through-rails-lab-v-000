<h1>Doctor <%=@doctor.name %></h1>

<h2>Department: <%=@doctor.department %></h2>

<p>Appointments:</p>
<ul>

<% @doctor.appointments.each do |appt| %>
<li>
  <%= link_to appt.patient.name, patient_path(appt.patient) %>  <%= (appt.appointment_datetime.to_date).to_s + " at " + (appt.appointment_datetime.to_time).to_s %>
  </li>
<% end %>
</ul>
